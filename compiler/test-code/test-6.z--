start
  fun power {
    arg = (base, exp)
    if exp == 0 {
      return 1
    } else {
      let result = 1
      let i = 0
      while i < exp {
        result = result * base
        i = i + 1
      }
      return result
    }
  }
  
  fun isEven {
    arg = (num)
    if num % 2 == 0 {
      return true
    } else {
      return false
    }
  }
  
  let base = 2
  let exp = 8
  let powerResult = power(base, exp)
  
  print("2^8 = ")
  print(powerResult)
  
  if isEven(powerResult) {
    print("Result is even")
  } else {
    print("Result is odd")
  }
end